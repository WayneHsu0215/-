{
	"root": true,
	"extends": ["eslint:recommended", "prettier"],
	"plugins": ["svelte3"],
	"overrides": [{ "files": ["*.svelte"], "processor": "svelte3/svelte3" }],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"ignorePatterns": [
		".DS_Store",
		"._*",
		".idea/",
		"node_modules/",
		"/.svelte-kit/",
		"/build/",
		".env",
		"package-lock.json"
	],
	"rules": {
		"sort-imports": "warn"
	}
}
